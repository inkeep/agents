# ============================================
# Slack App Configuration
# Get these from https://api.slack.com/apps
# ============================================

# Required: OAuth & Permissions
SLACK_CLIENT_ID=your_client_id
SLACK_CLIENT_SECRET=your_client_secret
SLACK_SIGNING_SECRET=your_signing_secret

# Optional: For single-workspace dev mode (bypasses Nango)
# SLACK_BOT_TOKEN=xoxb-...
# SLACK_BOT_USER_ID=U...

# ============================================
# Nango Configuration
# Get these from https://app.nango.dev
# ============================================

NANGO_SECRET_KEY=your_nango_secret_key
NANGO_SERVER_URL=https://api.nango.dev
NANGO_INTEGRATION_ID=slack

# Optional: For webhook signature verification
# NANGO_WEBHOOK_VERIFY_SECRET=your_webhook_secret

# ============================================
# Database
# ============================================

# PostgreSQL connection string for workspace storage
INKEEP_AGENTS_MANAGE_DATABASE_URL=postgresql://user:password@localhost:5432/inkeep_agents

# Optional: REST API for legacy operations
# DB_URL=http://localhost:3002

# ============================================
# Inkeep API
# ============================================

INKEEP_RUN_API_BYPASS_SECRET=your_api_secret
INKEEP_TENANT_ID=your_tenant_id

# Optional: Custom API URL
# INKEEP_RUN_API_URL=https://run-api.pilot.inkeep.com

# ============================================
# App Configuration
# ============================================

NEXT_PUBLIC_APP_URL=http://localhost:3004
PROJECT_ID=default

# ============================================
# Local Development (Optional)
# Get ngrok token from https://dashboard.ngrok.com
# ============================================

# NGROK_AUTH_TOKEN=your_ngrok_token
# NGROK_DOMAIN=your-subdomain.ngrok.app