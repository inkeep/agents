{
  "name": "inkeep-slack-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 3004",
    "dev:tunnel": "pnpm check && tsx scripts/dev.tunnel.ts",
    "build": "pnpm check && next build",
    "start": "next start -p 3004",
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "check:quick": "pnpm typecheck && pnpm lint",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "pnpm check:quick"
  },
  "dependencies": {
    "@inkeep/agents-core": "workspace:*",
    "@nangohq/node": "^0.69.22",
    "@slack/bolt": "^4.6.0",
    "@vercel/slack-bolt": "^1.0.2",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.7.10",
    "next": "15.1.3",
    "postgres": "^3.4.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@ngrok/ngrok": "^1.6.0",
    "@slack/cli-hooks": "^1.2.1",
    "@slack/types": "^2.19.0",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.28.1",
    "express": "^5.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
