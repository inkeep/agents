{
  "name": "@inkeep/agents-core",
  "version": "0.19.1",
  "description": "Agents Core contains the database schema, types, and validation schemas for Inkeep Agent Framework, along with core components.",
  "type": "module",
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./src/index.ts",
    "./constants/models": "./src/constants/models.ts",
    "./schema": "./src/db/schema.ts",
    "./types": "./src/types/index.ts",
    "./validation": "./src/validation/index.ts",
    "./client-exports": "./src/client-exports.ts",
    "./drizzle": "./drizzle/",
    "./utils/schema-conversion": "./src/utils/schema-conversion.ts"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest --run",
    "test:unit": "vitest --run src/__tests__ --exclude src/__tests__/integration/**",
    "test:integration": "vitest --run src/__tests__/integration/",
    "test:coverage": "vitest --run --coverage",
    "test:watch": "vitest --watch",
    "lint": "biome lint src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:drop": "drizzle-kit drop",
    "db:clean": "tsx src/db/clean.ts",
    "db:delete": "tsx src/db/delete.ts",
    "db:reset": "pnpm db:delete && pnpm db:migrate",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "clean-package": "./clean-package.config.json",
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@hono/zod-openapi": "^1.0.2",
    "@libsql/client": "^0.15.7",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@nangohq/node": "^0.66.0",
    "@nangohq/types": "^0.66.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/baggage-span-processor": "^0.4.0",
    "@opentelemetry/exporter-jaeger": "^2.0.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.203.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "ai": "5.0.11",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.2",
    "exit-hook": "^4.0.0",
    "find-up": "^7.0.0",
    "hono": "^4.9.7",
    "jmespath": "^0.16.0",
    "nanoid": "^5.0.9",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "ts-pattern": "^5.7.1",
    "zod": "^4.1.11"
  },
  "optionalDependencies": {
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@types/jmespath": "^0.15.2",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^2.0.0",
    "clean-package": "^2.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "drizzle",
    "README.md",
    "LICENSE.md",
    "SUPPLEMENTAL_TERMS.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inkeep/agents.git",
    "directory": "packages/agents-core"
  }
}
