{
  "_readme": {
    "description": "Slack App Manifest for Inkeep Agent Work App",
    "usage": "Copy this manifest to Slack App settings at https://api.slack.com/apps and delte the _readme section",
    "ngrok_note": "Replace 'vic-agents-api.ngrok.app' with your ngrok domain",
    "production_note": "For production, replace ngrok URLs with your production API domain"
  },
  "display_information": {
    "name": "Inkeep Agent",
    "description": "Connect Inkeep agents to your Slack workspace",
    "background_color": "#4A154B"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": false,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Inkeep Agent",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/inkeep",
        "url": "https://vic-agents-api.ngrok.app/work-apps/slack/commands",
        "description": "Ask AI agents questions and manage your Inkeep integration",
        "usage_hint": "[question] | run [agent] [question] | link | unlink | status | settings | list | help",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "redirect_urls": [
      "https://api.nango.dev/oauth/callback",
      "https://vic-agents-api.ngrok.app/work-apps/slack/oauth_redirect"
    ],
    "scopes": {
      "user": ["users:read", "users:read.email"],
      "bot": [
        "app_mentions:read",
        "channels:history",
        "channels:read",
        "chat:write",
        "chat:write.public",
        "commands",
        "groups:history",
        "groups:read",
        "team:read",
        "users:read",
        "users:read.email"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://vic-agents-api.ngrok.app/work-apps/slack/events",
      "bot_events": ["app_mention", "message.channels", "message.groups"]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://vic-agents-api.ngrok.app/work-apps/slack/events"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
