{
  "name": "agent-framework",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inkeep/agents.git"
  },
  "author": "Inkeep <support@inkeep.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "sync:licenses": "node scripts/sync-licenses.mjs",
    "prebuild": "pnpm install --frozen-lockfile && pnpm sync:licenses",
    "build": "turbo build",
    "dev": "ENVIRONMENT=development turbo dev",
    "dev:apis": "turbo dev:apis",
    "pretest": "pnpm install --frozen-lockfile",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "coverage": "pnpm test:coverage && node scripts/merge-coverage.mjs && node scripts/generate-badges.mjs",
    "coverage:report": "node scripts/merge-coverage.mjs",
    "coverage:badges": "node scripts/generate-badges.mjs",
    "coverage:diff": "node scripts/coverage-diff.mjs",
    "coverage:enforce": "node scripts/enforce-coverage-change.mjs",
    "coverage:check": "pnpm coverage:diff && pnpm coverage:enforce",
    "lint": "turbo lint",
    "format": "biome format --write",
    "format:check": "biome check --write agents-manage-ui agents-manage-api agents-run-api examples agents-cli",
    "pretypecheck": "pnpm install --frozen-lockfile",
    "typecheck": "turbo typecheck",
    "clean": "pnpm -r --parallel exec rm -rf node_modules dist build .next .turbo",
    "clean:turbo": "turbo clean",
    "prepare": "husky",
    "release": "changeset publish",
    "release-dev": "changeset version --snapshot dev && changeset publish --tag dev"
  },
  "version": "0.1.0",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@changesets/cli": "^2.29.6",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.5",
    "turbo": "^2.5.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "agents-manage-api/**/*.{ts,tsx}": [
      "bash -c 'cd agents-manage-api && pnpm test --passWithNoTests --reporter=verbose'"
    ],
    "agents-run-api/**/*.{ts,tsx}": [
      "bash -c 'cd agents-run-api && pnpm test --passWithNoTests --reporter=verbose'"
    ]
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "keytar"
    ]
  }
}
