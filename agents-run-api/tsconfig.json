{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noEmit": false
  },
  "include": ["src/**/*", "src/types/**/*", "examples/**/*.ts", "../packages/agents-core/src/api-client/manage-api-client.ts"],
  "exclude": ["node_modules", "dist", "../sdk/src"]
}
