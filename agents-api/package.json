{
  "name": "@inkeep/agents-api",
  "version": "0.0.1",
  "description": "Unified Inkeep Agents API - combines management, runtime, and evaluation capabilities",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./manage": "./dist/domains/manage/index.js",
    "./run": "./dist/domains/run/index.js",
    "./evals": "./dist/domains/evals/index.js"
  },
  "type": "module",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "dev": "vite",
    "build": "tsdown",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:integration": "vitest --run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "biome lint --error-on-warnings",
    "lint:fix": "biome check --write"
  },
  "dependencies": {
    "@hono/mcp": "^0.1.5",
    "@hono/otel": "^0.4.0",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^1.1.5",
    "@inkeep/agents-core": "workspace:^",
    "@inkeep/agents-manage-mcp": "workspace:^",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.64.1",
    "@opentelemetry/baggage-span-processor": "^0.4.0",
    "@opentelemetry/context-async-hooks": "^2.1.0",
    "@opentelemetry/core": "^2.1.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "axios": "^1.13.2",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.10.4",
    "hono-pino": "^0.10.1",
    "openid-client": "^6.8.1",
    "pg": "^8.16.3"
  },
  "peerDependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.20.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.203.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.15.6",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.11.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "SUPPLEMENTAL_TERMS.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inkeep/agents.git",
    "directory": "agents-api"
  }
}
