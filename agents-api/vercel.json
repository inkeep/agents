{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "hono",
  "installCommand": "pnpm install",
  "buildCommand": "turbo build --filter=@inkeep/agents-api && pnpm --dir ../ prepack",
  "outputDirectory": "dist",
  "functions": {
    "index.js": {
      "maxDuration": 800,
      "includeFiles": ".well-known/**/*",
      "experimentalTriggers": [
        {
          "type": "queue/v1beta",
          "topic": "__wkf_workflow_*",
          "consumer": "default"
        },
        {
          "type": "queue/v1beta",
          "topic": "__wkf_step_*",
          "consumer": "default"
        }
      ]
    }
  }
}
