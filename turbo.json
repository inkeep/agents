{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "concurrency": "15",
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "TURBO_TOKEN",
    "TURBO_TEAM",
    "TURBO_TELEMETRY_DISABLED",
    "ENVIRONMENT",
    "INKEEP_AGENTS_MANAGE_DATABASE_URL",
    "INKEEP_AGENTS_RUN_DATABASE_URL",
    "PORT",
    "LOG_LEVEL"
  ],
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "sync:licenses": {
      "cache": false,
      "inputs": ["LICENSE.md", "SUPPLEMENTAL_TERMS.md", "scripts/sync-licenses.mjs"],
      "outputs": [
        "packages/*/LICENSE.md",
        "packages/*/SUPPLEMENTAL_TERMS.md",
        "agents-*/LICENSE.md",
        "agents-*/SUPPLEMENTAL_TERMS.md"
      ]
    },
    "build": {
      "dependsOn": ["^build", "sync:licenses"],
      "inputs": ["$TURBO_DEFAULT$", ".env.example"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "prepack": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.{test,spec}.{js,jsx,ts,tsx}"],
      "env": ["ANTHROPIC_API_KEY", "OPENAI_API_KEY"],
      "outputs": ["coverage/**"]
    },
    "@inkeep/agents-manage-mcp#build": {
      "dependsOn": ["^build", "sync:licenses"],
      "inputs": ["$TURBO_DEFAULT$", ".env.example"],
      "outputs": ["dist/**", "bin/**", ".tsbuildinfo"]
    },
    "@inkeep/agents-mcp#build": {
      "dependsOn": ["^build", "sync:licenses"],
      "inputs": ["$TURBO_DEFAULT$", ".env.example"],
      "outputs": ["esm/**", "bin/**", ".tsbuildinfo"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.{test,spec}.{js,jsx,ts,tsx}"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["transit"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": []
    },
    "lint:fix": {
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": [],
      "cache": false
    },
    "knip": {},
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": []
    },
    "typecheck:watch": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "dependsOn": ["db:manage:generate", "db:run:generate"],
      "cache": false
    },
    "db:migrate": {
      "dependsOn": ["db:manage:migrate", "db:run:migrate"],
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:clean": {
      "cache": false
    },
    "db:check": {
      "dependsOn": ["db:manage:check", "db:run:check"],
      "cache": false
    },
    "db:manage:generate": {
      "cache": false,
      "inputs": ["drizzle.manage.config.ts", "src/db/manage/manage-schema.ts"],
      "outputs": ["drizzle/manage/**"]
    },
    "db:manage:migrate": {
      "cache": false,
      "inputs": ["drizzle/manage/**", "src/db/manage/manage-schema.ts"]
    },
    "db:manage:drop": {
      "cache": false
    },
    "db:manage:studio": {
      "cache": false,
      "persistent": true
    },
    "db:manage:check": {
      "cache": false,
      "inputs": ["drizzle.manage.config.ts", "src/db/manage/manage-schema.ts"]
    },
    "db:run:generate": {
      "cache": false,
      "inputs": ["drizzle.run.config.ts", "src/db/runtime/runtime-schema.ts"],
      "outputs": ["drizzle/runtime/**"]
    },
    "db:run:migrate": {
      "cache": false,
      "inputs": ["drizzle/runtime/**", "src/db/runtime/runtime-schema.ts"]
    },
    "db:run:drop": {
      "cache": false
    },
    "db:run:studio": {
      "cache": false,
      "persistent": true
    },
    "db:run:check": {
      "cache": false,
      "inputs": ["drizzle.run.config.ts", "src/db/runtime/runtime-schema.ts"]
    },
    "docs#dev": {
      "cache": false,
      "persistent": true
    },
    "check": {
      "dependsOn": ["lint", "typecheck", "test"],
      "cache": false
    },
    "check:husky": {
      "dependsOn": ["build", "lint", "typecheck", "test"],
      "cache": false,
      "outputs": []
    },
    "check:prepush": {
      "dependsOn": ["lint", "typecheck", "test"],
      "cache": false,
      "outputs": []
    }
  }
}
